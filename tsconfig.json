{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "types": ["vite-plugin-pwa/client", "vite", "vite/client"],
    "module": "ES2020"
  },
  "include": ["src/**/*"]
}
